---
const { currentPage, lastPage, url } = Astro.props;
---

<section class="w-full flex flex-row justify-between font-semibold mt-4">
    <div class="flex flex-row gap-6">
        {
            url.first ? (
                <a
                    class="hidden sm:block text-black hover:text-opacity-60 no-underline"
                    href={url.first}
                >
                    First
                </a>
            ) : null
        }
        {
            url.prev ? (
                <a class="text-black hover:text-opacity-60 no-underline" href={url.prev}>
                    Previous
                </a>
            ) : null
        }
    </div>
    <span>{currentPage} of {lastPage}</span>
    <div class="flex flex-row gap-4">
        {
            url.next ? (
                <a class="text-black hover:text-opacity-60 no-underline" href={url.next}>
                    Next
                </a>
            ) : null
        }
        {
            url.last ? (
                <a
                    class="hidden sm:block text-black hover:text-opacity-60 no-underline"
                    href={url.last}
                >
                    Last
                </a>
            ) : null
        }
    </div>
</section>
